<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence  http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="runatripPU" transaction-type="JTA"> <!-- RESOURCE_LOCAL -->
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/runatripDS</jta-data-source>
		
		<class>com.runatrip.ejb.Trip</class>
		<class>com.runatrip.ejb.Place</class>
		
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		
		<properties>
		    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		    <property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
		
	</persistence-unit>
</persistence>